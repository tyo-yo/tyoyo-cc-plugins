// Claude Tasks Layout - supports up to 20 tiled panes
// Usage: zellij --layout claude-tasks --session claude-tasks
// Install: cp this file ~/.config/zellij/layouts/claude-tasks.kdl

layout {
    pane
}

// === Tiled Layouts (vertical bias) ===
swap_tiled_layout name="vertical" {
    ui max_panes=2 {
        pane split_direction="vertical" {
            pane
            pane
        }
    }
    ui max_panes=4 {
        pane split_direction="vertical" {
            pane { children; }
            pane { pane; pane; }
        }
    }
    ui max_panes=6 {
        pane split_direction="vertical" {
            pane { children; }
            pane { pane; pane; }
            pane { pane; pane; }
        }
    }
    ui max_panes=8 {
        pane split_direction="vertical" {
            pane { children; }
            pane { pane; pane; }
            pane { pane; pane; }
            pane { pane; pane; }
        }
    }
    ui max_panes=12 {
        pane split_direction="vertical" {
            pane { children; pane; pane; }
            pane { pane; pane; pane; }
            pane { pane; pane; pane; }
            pane { pane; pane; pane; }
        }
    }
    ui max_panes=16 {
        pane split_direction="vertical" {
            pane { children; pane; pane; pane; }
            pane { pane; pane; pane; pane; }
            pane { pane; pane; pane; pane; }
            pane { pane; pane; pane; pane; }
        }
    }
    ui max_panes=20 {
        pane split_direction="vertical" {
            pane { children; pane; pane; pane; }
            pane { pane; pane; pane; pane; }
            pane { pane; pane; pane; pane; }
            pane { pane; pane; pane; pane; }
            pane { pane; pane; pane; pane; }
        }
    }
}

swap_tiled_layout name="horizontal" {
    ui max_panes=4 {
        pane {
            pane split_direction="vertical" { children; }
            pane split_direction="vertical" { pane; pane; }
        }
    }
    ui max_panes=8 {
        pane {
            pane split_direction="vertical" { children; }
            pane split_direction="vertical" { pane; pane; pane; pane; }
        }
    }
    ui max_panes=12 {
        pane {
            pane split_direction="vertical" { children; pane; pane; pane; }
            pane split_direction="vertical" { pane; pane; pane; pane; }
            pane split_direction="vertical" { pane; pane; pane; pane; }
        }
    }
    ui max_panes=16 {
        pane {
            pane split_direction="vertical" { children; pane; pane; pane; }
            pane split_direction="vertical" { pane; pane; pane; pane; }
            pane split_direction="vertical" { pane; pane; pane; pane; }
            pane split_direction="vertical" { pane; pane; pane; pane; }
        }
    }
    ui max_panes=20 {
        pane {
            pane split_direction="vertical" { children; pane; pane; pane; pane; }
            pane split_direction="vertical" { pane; pane; pane; pane; }
            pane split_direction="vertical" { pane; pane; pane; pane; }
            pane split_direction="vertical" { pane; pane; pane; pane; }
            pane split_direction="vertical" { pane; pane; pane; pane; }
        }
    }
}

swap_tiled_layout name="stacked" {
    ui min_panes=21 {
        pane split_direction="vertical" {
            pane
            pane stacked=true { children; }
        }
    }
}

swap_floating_layout name="staggered" {
    floating_panes
}

swap_floating_layout name="spread" {
    floating_panes max_panes=1 {
        pane { y "50%"; x "50%"; }
    }
    floating_panes max_panes=2 {
        pane { x "1%"; y "25%"; width "45%"; }
        pane { x "50%"; y "25%"; width "45%"; }
    }
    floating_panes max_panes=3 {
        pane focus=true { y "55%"; width "45%"; height "45%"; }
        pane { x "1%"; y "1%"; width "45%"; }
        pane { x "50%"; y "1%"; width "45%"; }
    }
    floating_panes max_panes=4 {
        pane { x "1%"; y "55%"; width "45%"; height "45%"; }
        pane focus=true { x "50%"; y "55%"; width "45%"; height "45%"; }
        pane { x "1%"; y "1%"; width "45%"; height "45%"; }
        pane { x "50%"; y "1%"; width "45%"; height "45%"; }
    }
}
